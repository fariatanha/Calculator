<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <include layout="@layout/calculator_result"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/btndelete"
                android:text="C"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:minHeight="80dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"/>

            <Button
                android:id="@+id/btnbracket"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBackground"
                android:minHeight="80dp"
                android:text="( )"
                android:textColor="@color/colorFuncBtnText"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/btndelete"
                android:layout_toEndOf="@+id/btndelete"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/btndiv"
                android:text="/"
                android:layout_toRightOf="@+id/btnbracket"
                android:layout_marginLeft="2dp"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnmultiply"
                android:text="X"
                android:layout_toRightOf="@+id/btn9"
                android:layout_below="@+id/btndiv"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnminus"
                android:text="-"
                android:layout_toRightOf="@+id/btn6"
                android:layout_below="@+id/btnmultiply"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="50sp"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnadd"
                android:text="+"
                android:layout_toRightOf="@+id/btn3"
                android:layout_below="@+id/btnminus"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnpoint"
                android:text="."
                android:layout_below="@+id/btn1"
                android:layout_marginRight="2dp"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:layout_weight="1"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btndel"
                android:text="DEL"
                android:layout_toRightOf="@+id/btn0"
                android:layout_below="@+id/btn3"
                android:layout_marginRight="2dp"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnequal"
                android:text="="
                android:layout_toRightOf="@+id/btndel"
                android:layout_below="@+id/btnadd"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#FFFF"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn7"
                android:text="7"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_below="@+id/btndelete"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn8"
                android:text="8"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/btn7"
                android:layout_toEndOf="@+id/btn7"
                android:layout_below="@id/btnbracket"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn9"
                android:text="9"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/btn8"
                android:layout_toEndOf="@+id/btn8"
                android:layout_below="@id/btnbracket"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn1"
                android:text="1"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_below="@+id/btn4"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn2"
                android:text="2"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/btn1"
                android:layout_toEndOf="@+id/btn1"
                android:layout_below="@id/btn5"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn3"
                android:text="3"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/btn2"
                android:layout_toEndOf="@+id/btn2"
                android:layout_below="@id/btn6"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn4"
                android:text="4"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_below="@+id/btn7"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn5"
                android:text="5"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/btn4"
                android:layout_toEndOf="@+id/btn4"
                android:layout_below="@id/btn8"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn6"
                android:text="6"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/btn5"
                android:layout_toEndOf="@+id/btn5"
                android:layout_below="@id/btn9"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn0"
                android:text="0"
                android:layout_toRightOf="@+id/btnpoint"
                android:layout_below="@+id/btn2"
                android:layout_marginRight="2dp"
                android:minHeight="80dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                android:layout_weight="1"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>